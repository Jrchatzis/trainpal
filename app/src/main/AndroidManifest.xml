<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.john.travelinfo">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".SplashDelayActivity"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Trainpal"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Trainpal - Train search parameters"/>
        <activity
            android:name=".AvailableServicesActivity"
            android:parentActivityName=".MainActivity"
            android:label="Trainpal - Available services"/>
        <activity
            android:name=".WaitingLobbyActivity"
            android:label="Trainpal - Waiting lobby" />
        <activity
            android:name=".HomeActivity"
            android:label="Trainpal - Home"/>
        <activity
            android:name=".RouteAnalysisActivity"
            android:label="Trainpal - Navigation"/>
        <activity
            android:name=".ReportActivity"
            android:label="Trainpal - Report"/>
        <activity
            android:name=".InfoActivity"
            android:label="Trainpal - Additional Information"/>
        <activity
            android:name=".PoiWaverley"
            android:label="Trainpal - Waverley PoIs"/>
        <activity
            android:name=".PoiHaymarket"
            android:label="Trainpal - Haymarket PoIs"/>/>
        <activity
            android:name=".PoiGyle"
            android:label="Trainpal - South Gyle PoIs"/>/>
        <activity
            android:name=".PoiPark"
            android:label="Trainpal - Edinburgh Park PoIs"/>/>
        <activity
            android:name=".LegendActivity"
            android:label = "Trainpal - Legend"></activity>
    </application>

</manifest>