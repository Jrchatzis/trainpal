<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RouteAnalysisActivity">


    <!-- MapView -->
    <com.esri.arcgisruntime.mapping.view.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"></com.esri.arcgisruntime.mapping.view.MapView>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="172dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:background="#b2b2b2"
        android:popupBackground="#b2b2b2"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="129dp"
        android:layout_height="30dp"
        android:layout_above="@+id/checkBox2"
        android:layout_alignParentStart="true"
        android:background="#b2b2b2"
        android:checked="true"
        android:text="Buses/Tram" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="129dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignParentStart="true"
        android:background="#b2b2b2"
        android:checked="true"
        android:text="Taxi" />

    <TextView
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#b2b2b2"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dropOffStop"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:background="#b2b2b2"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>